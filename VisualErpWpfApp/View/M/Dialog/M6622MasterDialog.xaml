        <!--<dxe:ComboBoxEdit x:Name="combo_EQ_SNOR_NO"
                                     Grid.Column="1" Margin="138,570,15,0" VerticalAlignment="Top"
                                     ValidateOnTextInput="True"
                                     ValidateOnEnterKeyPressed="True"
