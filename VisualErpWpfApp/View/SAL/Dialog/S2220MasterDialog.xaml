        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="수주 번호 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="0" Foreground="HotPink" />
        <dxg:LookUpEdit HorizontalContentAlignment="Left" VerticalContentAlignment="Center" x:Name="combo_SL_ORD_NO" Grid.Column="1" Grid.ColumnSpan="1" Margin="1" Grid.Row="0" VerticalAlignment="Stretch" IsSynchronizedWithCurrentItem="True" DisplayMember="GBN" ValueMember="GBN" AutoPopulateColumns="False" AutoComplete="True" IncrementalFiltering="True" ImmediatePopup="True" IsPopupAutoWidth="False" HorizontalAlignment="Stretch" IsTextEditable="False" ShowSizeGrip="False" PopupWidth="800">
