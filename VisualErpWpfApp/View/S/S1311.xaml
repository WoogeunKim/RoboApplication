        <ControlTemplate x:Key="checkTemplate">
            <Image Name="PART_Editor" Height="16" Width="16"/>
            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=(dxe:BaseEdit.OwnerEdit).IsChecked}" Value="True">
                    <Setter TargetName="PART_Editor" Property="Source" Value="{dx:DXImage Image=Info_16x16.png}"></Setter>
                    <Setter TargetName="PART_Editor" Property="ToolTip" Value="접수"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=(dxe:BaseEdit.OwnerEdit).IsChecked}" Value="False">
                    <Setter TargetName="PART_Editor" Property="Source" Value="{dx:DXImage Image=Issue_16x16.png}"></Setter>
                    <Setter TargetName="PART_Editor" Property="ToolTip" Value="진행 중"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=(dxe:BaseEdit.OwnerEdit).EditValue}" Value="E">
                    <Setter TargetName="PART_Editor" Property="Source" Value="{dx:DXImage Image=Apply_16x16.png}"></Setter>
                    <Setter TargetName="PART_Editor" Property="ToolTip" Value="완료"></Setter>
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="dxe:CheckEdit" x:Key="checkEditStyle">
            <Setter Property="DisplayTemplate"  Value="{StaticResource checkTemplate}"/>
            <Setter Property="EditTemplate"  Value="{StaticResource checkTemplate}"/>
        </Style>

