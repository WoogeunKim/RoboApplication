            <dxg:GridColumn FieldName="ITM_STL_PRD_DESC" Header="가공정보" Width="210" AllowEditing="False" AllowColumnFiltering="True" FilterPopupMode="CheckedList" AllowMoving="False"  HorizontalHeaderContentAlignment="Center" AllowResizing="True" VisibleIndex="13" >
