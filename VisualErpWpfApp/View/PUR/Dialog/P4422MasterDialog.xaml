        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="1" Text="거래처 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="4"  Foreground="DarkGray" Margin="0,5" Width="58"/>
