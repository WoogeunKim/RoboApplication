        <ControlTemplate x:Key="checkTemplate">
            <Image x:Name="PART_Editor" Height="16" Width="16"/>
            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding (dxe:BaseEdit.OwnerEdit).IsChecked}" Value="True">
                    <Setter TargetName="PART_Editor" Property="Source" Value="/Images/check_box_T.png"/>
                    <Setter TargetName="PART_Editor" Property="ToolTip" Value="True"/>
