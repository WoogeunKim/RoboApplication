        <dxe:DateEdit x:Name="text_PROD_PLN_DT" Grid.Column="1" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" Margin="2" Grid.Row="1" Grid.ColumnSpan="2" IsTextEditable="False" ShowClearButton="False" Text="{Binding PROD_PLN_DT}"/>

