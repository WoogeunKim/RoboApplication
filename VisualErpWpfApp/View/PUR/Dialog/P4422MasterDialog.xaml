        <TextBlock Height="20" VerticalAlignment="Center" Text="일자 : " HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1" Margin="0,8,0,7" Width="42"/>
        <dxe:DateEdit x:Name="text_FM_DT" Grid.Column="2" Grid.Row="1" Margin="2" VerticalAlignment="Stretch" MaxLength="10" ShowClearButton="False" IsTextEditable="True" AllowDefaultButton="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ShowWeekNumbers="True" />

        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="1" Text="사업장 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="3"  Foreground="DarkGray" Margin="0,5" Width="58"/>
