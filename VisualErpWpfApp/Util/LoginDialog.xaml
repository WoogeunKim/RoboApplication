                <dxe:ImageEdit HorizontalAlignment="Right" Name="img_main_setting" Stretch="Fill" VerticalAlignment="Top" IsReadOnly="True" ShowBorder="False" Width="15" Height="15" Source="{dx:DXImage Image=Technology_32x32.png}" ToolTip="설정" Cursor="Hand" />
            </Grid>
        </Border>


        <Rectangle Width="280" Height="180" Fill="White" VerticalAlignment="Bottom"  Margin="0,60" RadiusY="9.6" RadiusX="9.6" >
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="10"  RenderingBias="Quality" ShadowDepth="1" />
            </Rectangle.Effect>
        </Rectangle>

        <Grid Width="275" Height="140" VerticalAlignment="Bottom" Margin="0,100">
            <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Foreground="Gray" FontSize="16" x:Name="text_loginNm" FontWeight="Bold" />
            <StackPanel VerticalAlignment="Center" Margin="10">
                <dxe:TextEdit  Name="txtId"  FontSize="14" Height="40" Margin="0,25,0,0" NullText="ID" />
                <TextBlock Height="5"/>
                <dxe:PasswordBoxEdit Name="txtPass" MaxLength="20" Height="25" Margin="0,0,0,0" NullText="Password" />
                <TextBlock Height="10"/>
                <TextBlock Foreground="Gray" FontSize="15" x:Name="text_CoNm"  HorizontalAlignment="Center" FontWeight="Bold"  />
