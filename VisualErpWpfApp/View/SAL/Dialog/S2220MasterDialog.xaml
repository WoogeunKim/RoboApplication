            <TextBlock  Text="수량 : " HorizontalAlignment="Stretch" TextAlignment="Right" VerticalAlignment="Center" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Foreground="Gray"  FontWeight="Bold" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="{Binding ElementName=combo_SL_ORD_NO, Path=SelectedItem.SO_DT}" HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Foreground="Gray"  />
