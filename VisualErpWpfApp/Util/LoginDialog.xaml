            </StackPanel>
        </Grid>
        <dx:SimpleButton HorizontalAlignment="Center" Name="btn_login" VerticalAlignment="Bottom" Margin="0,50" Width="200"  >
            <StackPanel>
                <Image Source="{dx:DXImageOffice2013 Image=Apply_32x32.png}" Width="20" Height="20" />
                <TextBlock>LOGIN</TextBlock>
