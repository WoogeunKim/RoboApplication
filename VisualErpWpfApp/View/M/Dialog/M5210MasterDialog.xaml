            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
            <!--<ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />-->
        </Grid.ColumnDefinitions>

        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="작업지시번호 : " HorizontalAlignment="Right" TextAlignment="Right" Foreground="DarkGray" />
        <dxe:TextEdit x:Name="text_PROD_PLN_NO" Grid.Column="1" VerticalAlignment="Stretch" Grid.ColumnSpan="2" MaxLength="20" Text="{Binding PROD_PLN_NO}" Margin="2" Background="DarkGray" />

        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="생산계획일자 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="1" />
