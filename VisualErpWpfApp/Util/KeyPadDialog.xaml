        <Button x:Name="EngAndKor" FontSize="16" Foreground="#FFF78A09" Content="한글" HorizontalAlignment="Left" Margin="539,0,0,0" VerticalAlignment="Top" Width="57" Height="60" Grid.Column="0" />

        <!-- 숫자 -->
        <Button x:Name="K1" Content="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Height="45" Grid.Row="1" />
        <Button x:Name="K2" Content="2" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" Width="45" Height="45" Grid.Row="1" />
