                <dxb:BarButtonItem x:Name="M_cancel" Content="칭량 취소" Command="{Binding CancelCommand}" Glyph="{dxc:DXImage SvgImages/Dashboards/Delete.svg}" LargeGlyph="{dxc:DXImage SvgImages/Dashboards/Delete.svg}"  IsEnabled="{Binding isM_CANCEL}"  />


                <dxb:BarEditItem x:Name="M_FM_DT" Content="작업 일자 : " EditValue="{Binding StartDt}" >
                    <dxb:BarEditItem.EditSettings>
                        <dxe:DateEditSettings IsTextEditable="True"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  >
                            <dxe:DateEditSettings.StyleSettings>
                                <dxe:DateEditPickerStyleSettings />
                            </dxe:DateEditSettings.StyleSettings>
                        </dxe:DateEditSettings>
                    </dxb:BarEditItem.EditSettings>
                </dxb:BarEditItem>


                <dxb:BarEditItem x:Name="M_SEARCH_TEXT" Content="검  색 : " EditValue="{Binding M_SEARCH_TEXT, Mode=TwoWay}">
                    <dxb:BarEditItem.EditTemplate>
                        <DataTemplate>
                            <dxe:TextEdit Width="120" Height="30" FontSize="14" KeyDown="M_SEARCH_TEXT_KeyDown" Text="{Binding DataContext.M_SEARCH_TEXT, RelativeSource={RelativeSource AncestorType=dxb:BarEditItemLinkControl}}" />
                        </DataTemplate>
                    </dxb:BarEditItem.EditTemplate>
                </dxb:BarEditItem>


                <dxb:BarEditItem x:Name="M_BLANK" Content="" >
                </dxb:BarEditItem>

            </dxb:BarManager.Items>
