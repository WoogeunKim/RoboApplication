                <dxb:BarButtonItem x:Name="M_producePrint" Content="제조지시" KeyGesture="F4" Command="{Binding ProducePrintContactCommand}" IsEnabled="{Binding isD_UPDATE}" Glyph="{dxc:DXImage SvgImages/XAF/Action_Workflow_ShowWorkflowInstances.svg}" LargeGlyph="{dxc:DXImage SvgImages/XAF/ActionGroup_EasyTestRecorder.svg}" />


                <dxb:BarButtonItem x:Name="M_barCodePrint" Content="원료 바코드" KeyGesture="F4" Command="{Binding BarCodeDialogCommand}" IsEnabled="{Binding isD_UPDATE}" Glyph="{dxc:DXImage SvgImages/Reports/BarCodeShowText.svg}" LargeGlyph="{dxc:DXImage SvgImages/Reports/BarCodeShowText.svg}" />


