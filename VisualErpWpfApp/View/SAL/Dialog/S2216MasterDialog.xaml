        </dxg:LookUpEdit>
        <TextBlock Height="18" Text="{Binding ElementName=combo_SL_USR_NM, Path=SelectedItem.USR_N1ST_NM}" HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Bottom" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Foreground="Gray" Margin="170,0,0,2"  />


