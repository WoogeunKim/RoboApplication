        <dxe:TextEdit x:Name="txt_PROD_QTY" Grid.Column="1" Grid.Row="4" Margin="2" VerticalAlignment="Stretch" HorizontalContentAlignment="Right" Text="{Binding PROD_QTY}" VerticalContentAlignment="Center" MaskType="Numeric" Mask="###,###,###,##0" MaskUseAsDisplayFormat="True" IsEnabled="False" FontWeight="Bold"  />-->


        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="계획 수량 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="6" Margin="0,8,0,4" />
        <dxe:TextEdit x:Name="txt_PROD_PLN_QTY" Grid.Column="1" Grid.Row="6" Margin="2" VerticalAlignment="Stretch" HorizontalContentAlignment="Right" Text="{Binding PROD_PLN_QTY}" VerticalContentAlignment="Center" MaskType="Numeric" Mask="###,###,###,##0" MaskUseAsDisplayFormat="True"   />


