                <dxb:BarButtonItem x:Name="M_edit" Content="수정" KeyGesture="F7" Glyph="{dx:DXImage Image=Edit_16x16.png}" LargeGlyph="{dx:DXImage Image=Edit_32x32.png}" Command="{Binding EditDialogCommand}" IsEnabled="{Binding isM_UPDATE}" />
                <dxb:BarButtonItem x:Name="M_del" Content="삭제" KeyGesture="F8" Glyph="{dx:DXImage Image=RemoveItem_16x16.png}" LargeGlyph="{dx:DXImage Image=RemoveItem_32x32.png}" Command="{Binding DelDialogCommand}" IsEnabled="False" />-->
                <dxb:BarButtonItem x:Name="M_ref" Content="조회" KeyGesture="F5" Glyph="{dx:DXImage Image=Refresh2_16x16.png}" LargeGlyph="{dx:DXImage Image=Refresh2_32x32.png}" Command="{Binding SearchDialogCommand}" ItemClick="M_REFRESH_ItemClick" />

                <dxb:BarButtonItem x:Name="M_config" Content="설정" KeyGesture="F11" Glyph="{dx:DXImage Image=InitialState_16x16.png}" LargeGlyph="{dx:DXImage Image=InitialState_32x32.png}" Command="{Binding ConfigDialogCommand}" />
                <dxb:BarButtonItem x:Name="M_weighing" Content="칭량" KeyGesture="F12" Glyph="{dx:DXImage Image=WeightedPies_16x16.png}" LargeGlyph="{dx:DXImage Image=WeightedPies_32x32.png}" Command="{Binding WeighingDialogCommand}" IsEnabled="{Binding isD_UPDATE}" />
                
                <dxb:BarButtonItem x:Name="M_barPrint" Content="바코드" KeyGesture="F10" Glyph="{dx:DXImage Image=Barcode2_16x16.png}" LargeGlyph="{dx:DXImage Image=Barcode2_32x32.png}" Command="{Binding BarCodeDialogCommand}" IsEnabled="{Binding isD_UPDATE}" />
                <dxb:BarButtonItem x:Name="M_barConfig" Content="설정" KeyGesture="F9" Glyph="{dx:DXImage Image=PrintDialog_16x16.png}" LargeGlyph="{dx:DXImage Image=PrintDialog_32x32.png}" Command="{Binding BarCodeConfigDialogCommand}"  />

