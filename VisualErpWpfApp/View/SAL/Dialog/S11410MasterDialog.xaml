        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="품목코드 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="0" />
        <dxe:TextEdit x:Name="text_CAR_TP_CD" Grid.Column="2" VerticalAlignment="Stretch" Text="{Binding CAR_TP_CD}" Grid.Row="0" Margin="2" MaxLength="20" />

        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="품목명 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="1" />
        <dxe:TextEdit x:Name="text_CAR_TP_NM" Grid.Column="2" VerticalAlignment="Stretch" Text="{Binding CAR_TP_NM}" Grid.Row="1" Margin="2" MaxLength="90" />


        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="비고 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="2" />
        <dxe:TextEdit x:Name="text_CAR_TP_SUB_NM" Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Stretch" Text="{Binding CAR_TP_SUB_NM}" Grid.Row="2" Margin="2" MaxLength="200" AcceptsReturn="True" />

