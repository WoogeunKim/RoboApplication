        <TextBlock Height="20" Text="입고 여부 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="5" Grid.Column="1" />
        <dxe:ComboBoxEdit x:Name="combo_RTN_APRO_FLG" VerticalAlignment="Stretch" Text="{Binding RTN_APRO_FLG}" IsTextEditable="False" ShowSizeGrip="False" Grid.Row="5" Grid.Column="2"  Margin="2" >
            <dxe:ComboBoxEditItem Content="Y" IsSelected="True" />
            <dxe:ComboBoxEditItem Content="N" />
        </dxe:ComboBoxEdit>

        <TextBlock Height="20" HorizontalAlignment="Right" Text="비고 : " TextAlignment="Right" VerticalAlignment="Top" Grid.Row="6" Grid.Column="1" Margin="0,3,0,0" />
