               <Run FontSize="9" >ex> T1;T2;T3;  </Run>
               <Run FontSize="13">센서 :  </Run>
        </TextBlock>
        --><!--<dxe:TextEdit  x:Name="text_EQ_SNOR_NO" Grid.Column="1" Margin="138,570,15,0" VerticalAlignment="Top" Text="{Binding EQ_SNOR_NO}" MaxLength="120" AcceptsReturn="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="22" />--><!--

        <dxg:LookUpEdit  Grid.Column="1" Margin="138,570,15,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" x:Name="combo_EQ_SNOR_NO" Grid.ColumnSpan="2" Grid.Row="0"  Text="{Binding EQ_SNOR_NO}" IsSynchronizedWithCurrentItem="True" DisplayMember="SENS_CD" ValueMember="SENS_CD" AutoPopulateColumns="False" AutoComplete="True" IncrementalFiltering="True" ImmediatePopup="True" IsPopupAutoWidth="False" HorizontalAlignment="Stretch" IsTextEditable="False" ShowSizeGrip="False"  >
            <dxg:LookUpEdit.PopupContentTemplate>
                <ControlTemplate>
                    <dxg:GridControl Name="PART_GridControl" >
                        <dxg:GridControl.View>
