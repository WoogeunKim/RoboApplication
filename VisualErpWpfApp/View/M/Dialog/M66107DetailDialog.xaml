            </dxg:GridColumn>

            <dxg:GridColumn FieldName="SL_ITM_QTY" Header="수량" Width="100" AllowEditing="False" AllowColumnFiltering="True" FilterPopupMode="CheckedList" AllowMoving="False"  HorizontalHeaderContentAlignment="Center" AllowResizing="True" VisibleIndex="12" >
