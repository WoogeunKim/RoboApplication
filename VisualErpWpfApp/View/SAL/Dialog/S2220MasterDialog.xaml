            <TextBlock Text="{Binding ElementName=combo_SL_ORD_NO, Path=SelectedItem.SL_ITM_QTY, StringFormat='###,##0'}" HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Foreground="Gray"   FontWeight="Bold" />
        </StackPanel>




        <TextBlock Height="20" VerticalAlignment="Center" Grid.Column="0" Text="년 - 월 : " HorizontalAlignment="Right" TextAlignment="Right" Grid.Row="4" />
        <dxe:DateEdit x:Name="text_SL_PLN_YRMON" ShowWeekNumbers="True" MaskType="DateTime" IsTextEditable="True" AllowDefaultButton="True" Mask="yyyy-MM" MaskUseAsDisplayFormat="True" Grid.Column="2" VerticalAlignment="Stretch" Text="{Binding SL_PLN_YRMON}" Grid.Row="4" Margin="2">
