        <!-- 리포트 설정 -->
        <dxe:ImageEdit Margin="25,0,0,0" HorizontalAlignment="Left" Name="img_setting" Stretch="Fill" VerticalAlignment="Top" IsReadOnly="True" ShowBorder="False" Width="20" Height="20" Source="{dx:DXImageOffice2013 Image=ImportImage_32x32.png}" ToolTip="보고서 이미지 설정" Cursor="Hand" />

        <!-- 종료 -->
        <dxe:ImageEdit HorizontalAlignment="Right" Name="img_close" Stretch="Fill" VerticalAlignment="Top" IsReadOnly="True" ShowBorder="False" Width="20" Height="20" Source="{dx:DXImageOffice2013 Image=Close_32x32.png}" ToolTip="닫기" Cursor="Hand" />

        <Border Background="WhiteSmoke" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="20" >
            <Grid>
                <dxe:ImageEdit HorizontalAlignment="Stretch"  Name="img_main" Stretch="Fill" VerticalAlignment="Stretch" IsReadOnly="True" ShowBorder="False" Width="230" Height="200" Margin="-1" />
