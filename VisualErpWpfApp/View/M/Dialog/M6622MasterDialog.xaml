<dx:DXWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="AquilaErpWpfApp3.View.M.Dialog.M6622MasterDialog"
    Title="Master Code" Height="740" Width="465" FontFamily="Arial" WindowStartupLocation="CenterOwner" ShowIcon="True" ResizeMode="NoResize" FontSize="13" Icon="{dx:DXImage Image=AddItem_16x16.png}">

    <Grid Width="430" x:Name="configCode">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="426*" />
        </Grid.ColumnDefinitions>

        <TextBlock Height="22" Margin="0,12,0,0" VerticalAlignment="Top" Grid.Column="1" Text="코드 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right" />
        <dxe:TextEdit Height="22" x:Name="text_PROD_EQ_NO" Grid.Column="1" Margin="140,10,13,0" VerticalAlignment="Top" MaxLength="20" Text="{Binding PROD_EQ_NO}" />

        
        
        <!--<TextBlock Height="22" Margin="0,40,0,0" VerticalAlignment="Top" Grid.Column="1" Text="모델 명 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit Height="22" x:Name="text_EQ_MDL_NM" Grid.Column="1" Margin="139,37,14,0" VerticalAlignment="Top" MaxLength="50" Text="{Binding EQ_MDL_NM}" />-->

        <TextBlock Height="22" Margin="0,70,0,0" VerticalAlignment="Top" Grid.Column="1" Text="설비 명 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit Height="22" x:Name="text_EQ_NM" Grid.Column="1" Margin="139,67,14,0" VerticalAlignment="Top" MaxLength="50" Text="{Binding EQ_NM}" />

        <TextBlock Height="22" Margin="0,100,0,0" VerticalAlignment="Top" Grid.Column="1" Text="규격 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit Height="22" x:Name="text_EQ_SZ_NM" Grid.Column="1" Margin="139,97,14,0" VerticalAlignment="Top" MaxLength="50" Text="{Binding EQ_SZ_NM}" />

        <TextBlock Height="22" Margin="0,130,0,0" VerticalAlignment="Top" Grid.Column="1" Text="Speed(EA/hr) : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit  x:Name="text_MN_MTR_CSM_CTNT" Grid.Column="1" Margin="139,127,14,0" VerticalAlignment="Top" Text="{Binding MN_MTR_CSM_CTNT}" MaxLength="90" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="50" />

        <TextBlock Height="22" Margin="0,188,0,0" VerticalAlignment="Top" Text="수량 : " HorizontalAlignment="Left" Width="142" TextAlignment="Right" Grid.ColumnSpan="2"/>
        <dxe:TextEdit x:Name="text_EQ_QTY" Grid.Column="1" Height="22" Margin="138,185,15,0" VerticalAlignment="Top" MaxLength="3" MaskType="RegEx" Mask="\d{1,3}" Text="{Binding EQ_QTY}" />

        <TextBlock Height="22" Margin="0,217,0,0" VerticalAlignment="Top" Grid.Column="1" Text="제작사 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit Height="22" x:Name="text_EQ_MKR_NM" Grid.Column="1" Margin="139,214,14,0" VerticalAlignment="Top" MaxLength="50" Text="{Binding EQ_MKR_NM}" />

        <TextBlock Height="22" Margin="0,247,0,0" VerticalAlignment="Top" Grid.Column="1" Text="구입가 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit Height="22" x:Name="text_EQ_PUR_AMT" Grid.Column="1" Margin="139,244,14,0" VerticalAlignment="Top" Text="{Binding EQ_PUR_AMT}" MaskType="Numeric" Mask="###,###,###,##0" MaskUseAsDisplayFormat="True" />

        <TextBlock Height="22" Margin="0,277,0,0" VerticalAlignment="Top" Grid.Column="1" Text="구입 년도 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:DateEdit x:Name="text_EQ_PUR_YRMON" Grid.Column="1" Height="22" Margin="139,274,14,0" VerticalAlignment="Top" IsTextEditable="False" ShowClearButton="False" Mask="y" MaskUseAsDisplayFormat="True" Text="{Binding EQ_PUR_YRMON}" >
            <dxe:DateEdit.StyleSettings>
                <dxe:DateEditPickerStyleSettings />
            </dxe:DateEdit.StyleSettings>
        </dxe:DateEdit>

        <TextBlock Height="22" Margin="0,307,0,0" VerticalAlignment="Top" Grid.Column="1" Text="설비 등급 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit Height="22" x:Name="text_EQ_GRD_CD" Grid.Column="1" Margin="139,304,14,0" VerticalAlignment="Top" MaxLength="10" Text="{Binding EQ_GRD_CD}" />

        <TextBlock Height="22" Margin="0,337,0,0" VerticalAlignment="Top" Grid.Column="1" Text="적정인원 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit  x:Name="text_BALL_STAR_AREA_CTNT" Grid.Column="1" Margin="139,334,14,0" VerticalAlignment="Top" Text="{Binding BALL_STAR_AREA_CTNT}" MaxLength="90" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="50" />

        <TextBlock Height="22" Margin="0,396,0,0" VerticalAlignment="Top" Grid.Column="1" Text="용도(공정명) : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit  x:Name="text_USG_DESC" Grid.Column="1" Margin="139,393,14,0" VerticalAlignment="Top" Text="{Binding USG_DESC}" MaxLength="90" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="50" />

        <TextBlock Height="22" Margin="0,453,0,0" VerticalAlignment="Top" Grid.Column="1" Text="설치 위치 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <!--<dxe:TextEdit Height="22" x:Name="text_EQ_LOC_CD" Grid.Column="1" Margin="139,451,14,0" VerticalAlignment="Top" MaxLength="10" Text="{Binding EQ_LOC_CD}" />-->
        <dxg:LookUpEdit Height="22" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" x:Name="combo_EQ_LOC_CD" Grid.Column="1" Margin="139,451,14,0" VerticalAlignment="Top" Text="{Binding EQ_LOC_NM}" IsSynchronizedWithCurrentItem="True" DisplayMember="CLSS_DESC" ValueMember="CLSS_DESC" AutoPopulateColumns="False" AutoComplete="True" IncrementalFiltering="True" ImmediatePopup="True" IsPopupAutoWidth="False" HorizontalAlignment="Stretch" IsTextEditable="False" ShowSizeGrip="False" >
            <dxg:LookUpEdit.PopupContentTemplate>
                <ControlTemplate>
                    <dxg:GridControl Name="PART_GridControl" >
                        <dxg:GridControl.View>
                            <dxg:TableView Name="View_EQ_LOC_CD" SearchDelay="0" ShowColumnHeaders="False" NewItemRowPosition="None" ShowGroupedColumns="True" AutoWidth="True" AllowPerPixelScrolling="True" ScrollAnimationDuration="0" ShowAutoFilterRow="False" ShowTotalSummary="False" IsSynchronizedWithCurrentItem="True" />
                        </dxg:GridControl.View>
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn FieldName="CLSS_CD" Width="50" HorizontalHeaderContentAlignment="Center" FilterPopupMode="CheckedList" ToolTip="" >
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="CLSS_DESC" Width="130" HorizontalHeaderContentAlignment="Center"  FilterPopupMode="CheckedList" ToolTip="" >
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                        </dxg:GridControl.Columns>
                    </dxg:GridControl>
                </ControlTemplate>
            </dxg:LookUpEdit.PopupContentTemplate>
            <dxg:LookUpEdit.StyleSettings>
                <dxg:SearchLookUpEditStyleSettings />
            </dxg:LookUpEdit.StyleSettings>
        </dxg:LookUpEdit>

        <TextBlock Height="22" Margin="0,481,0,0" VerticalAlignment="Top" Grid.Column="1" Text="점검 일자 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:DateEdit x:Name="text_INSP_DT" Grid.Column="1" Height="22" Margin="138,478,15,0" VerticalAlignment="Top" IsTextEditable="False" ShowClearButton="False" Mask="d" MaskUseAsDisplayFormat="True" Text="{Binding INSP_DT}" >
            <dxe:DateEdit.StyleSettings>
                <dxe:DateEditPickerStyleSettings />
            </dxe:DateEdit.StyleSettings>
        </dxe:DateEdit>


        <TextBlock Height="22" Margin="0,507,0,0" VerticalAlignment="Top" Grid.Column="1" Text="비고 : " HorizontalAlignment="Left" Width="138" TextAlignment="Right"/>
        <dxe:TextEdit  x:Name="text_EQ_DESC" Grid.Column="1" Margin="138,505,15,0" VerticalAlignment="Top" Text="{Binding EQ_DESC}" MaxLength="90" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="90" />

